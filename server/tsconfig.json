{
  "compilerOptions": {
    "target": "es2016",
    "module": "commonjs",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "typeRoots": ["./node_modules/@types", "./types"],
    "skipLibCheck": true,
    "outDir": "./dist",         
    "rootDir": "."             
  },
  "include": ["**/*.ts", "global.d.ts"],    
  "exclude": ["node_modules", "dist"]   
}